<?xml version="1.0" encoding="UTF-8"?>
<element>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <display-name>Online Library Management System</display-name>
    
    <!-- Servlet for Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.librarmanagement.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Registration -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.librarmanagement.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Book Management -->
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.librarmanagement.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/BookServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Admin Operations -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.librarmanagement.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Issuing Books -->
    <servlet>
        <servlet-name>IssueBookServlet</servlet-name>
        <servlet-class>com.librarmanagement.IssueBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IssueBookServlet</servlet-name>
        <url-pattern>/IssueBookServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Logout -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.librarmanagement.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <!-- Servlet for SearchBooks -->
    <servlet>
        <servlet-name>SearchBooksServlet</servlet-name>
        <servlet-class>com.librarmanagement.SearchBooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBooksServlet</servlet-name>
        <url-pattern>/SearchBooksServlet</url-pattern>
    </servlet-mapping>
    <servlet>
	    <servlet-name>UpdateBookServlet</servlet-name>
	    <servlet-class>com.librarmanagement.UpdateBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UpdateBookServlet</servlet-name>
	    <url-pattern>/UpdateBookServlet</url-pattern>
	</servlet-mapping>

	<servlet>
	    <servlet-name>DeleteBookServlet</servlet-name>
	    <servlet-class>com.librarmanagement.DeleteBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>DeleteBookServlet</servlet-name>
	    <url-pattern>/DeleteBookServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>UserProfileServlet</servlet-name>
	    <servlet-class>com.librarmanagement.UserProfileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UserProfileServlet</servlet-name>
	    <url-pattern>/UserProfileServlet</url-pattern>
	</servlet-mapping>

    <!-- Welcome Page Configuration -->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
        
    </welcome-file-list>
</web-app>

</element>